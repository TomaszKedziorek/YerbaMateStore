@model YerbaMateStore.Models.Entities.OrderHeader
@{
  ViewData["Title"] = "Order Confirmation";
}
<section class="d-flex justify-content-center bg-light">
  <div class="container-lg pb-5 p-3">
    <h1 class="text-success">@ViewData["Title"]</h1>
    <hr />
    <div class="row justify-content-center">
      <div class="col-12">

        <div class="container row my-2">
          <div class="col-12 text-center">
            <h2 class="text-dark text-center">Thank you for making order!</h2>
            <h3 class="text-success text-center">Order Placed Successfully!</h3>
          </div>

          <div class="row justify-content-center">
            <div class="col-6 ">
              <hr>
              <table class="table table-hover table-borderless" id="orderConfirmationTable">
                <tbody class="text-left">
                  <tr>
                    <td>Order Id</td>
                    <td>@Model.Id</td>
                  </tr>
                  <tr>
                    <td>Order Status</td>
                    <td>@Model.OrderStatus</td>
                  </tr>
                  <tr>
                    <td>Payment Type</td>
                    <td>@Model.PaymentType</td>
                  </tr>
                  @if (Model.DeliveryMethod.PaymentMethod.IsTransfer)
                  {
                    <tr>
                      <td>Order Payment Status</td>
                      <td>@Model.PaymentStatus</td>
                    </tr>
                  }
                  <tr>
                    <td>Delivery Method</td>
                    <td>@Model.DeliveryMethod.Carrier</td>
                  </tr>
                  <tr>
                    <td>Realisation time</td>
                    <td>@Model.DeliveryMethod.DeliveryTime</td>
                  </tr>
                  <tr>
                    <td>Order total</td>
                    <td>@Model.OrderTotal.ToString("0.00") zł</td>
                  </tr>
                  <tr>
                    <td>Delivery cost</td>
                    <td>@Model.DeliveryMethod.Cost.ToString("0.00") zł</td>
                  </tr>
                  <tr>
                    <td>Total</td>
                    <td>@Model.OrderAndDeliveryTotal.ToString("0.00") zł</td>
                  </tr>
                </tbody>
              </table>

            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>