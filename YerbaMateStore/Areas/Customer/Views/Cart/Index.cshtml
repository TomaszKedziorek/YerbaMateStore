@model YerbaMateStore.Models.ViewModels.ShoppingCartViewModel
@{
  ViewData["Title"] = "Cart";
}
<section class="d-flex justify-content-center">
  <div class="container-lg pb-5 p-3">
    <h1 class="text-success">@ViewData["Title"]</h1>
    <hr />
    <div class="row justify-content-center">
      <div class="col-12">

        <form method="post">
          <div class="card">
            <div class="card-header bg-dark text-light">
              <div class="row">
                <div class="col-6  pt-2">
                  <i class="bi bi-basket2-fill "></i> &nbsp;
                  Shopping Cart
                </div>
                <div class="col-6 text-end">
                  <a class="btn btn-outline-info btn-sm" asp-area="Customer" asp-controller="Home"
                    asp-action="Index">Continue Shopping</a>
                </div>
              </div>
            </div>

            <div class="card-body">

              <div class="row">
                <div class="d-none d-lg-block col-lg-1 text-center">
                  <img src="img" class="rounded" width="100%" />
                </div>
                <div class="col-12 col-lg-6 ">
                  <h5><strong>Brand - Name</strong></h5>
                  <p><small>Mass</small></p>
                </div>
                <div class="col-12  col-lg-5 text-center row">
                  <div class="col-4 text-md-right pt-2">
                    <h6><strong>Pricez≈Ç<span class="text-muted"> x </span> Quantity
                      </strong></h6>
                  </div>

                  <div class="col-6 col-sm-4 col-lg-6">
                      <a class="btn btn-success" asp-area="">
                        <i class="bi bi-dash-circle"></i>
                      </a> 
                      <a class="btn btn-success">
                        <i class="bi bi-plus-circle"></i>
                      </a>
                  </div>

                  <div class="col-2 col-sm-4 col-lg-2 text-right">
                    <a class="btn btn-danger">
                      <i class="bi bi-trash-fill"></i>
                    </a>
                  </div>
                </div>
              </div>

              <hr />

              <div class="row px-4">
                <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8">
                  <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between bg-light">
                      <span class="text-info"> Total (PLN)</span>
                      <strong class="text-info">$$$</strong>
                    </li>
                  </ul>
                </div>
              </div>
            </div>

            <div class="card-footer">
              <div class="row my-2 px-4 bg-transparent">
                <div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
                  <a class="btn btn-success form-control fw-bold">Summary</a>
                </div>
              </div>
            </div>
          </div>
        </form>

      </div>
    </div>
  </div>
</section>