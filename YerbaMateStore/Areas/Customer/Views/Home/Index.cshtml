@{
  ViewData["Title"] = "Home Page";
}

<!-- Start Banner Hero -->
<div id="template-mo-zay-hero-carousel" class="carousel slide" data-bs-ride="carousel">
  <ol class="carousel-indicators">
    <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="0" class="active"></li>
    <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="1"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <div class="container">
        <div class="row p-5">
          <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
            <img class="img-fluid" src="/images/yerbaMateImage1.jpg" alt="">
          </div>
          <div class="col-lg-6 mb-0 d-flex align-items-center">
            <div class="text-align-left align-self-center">
              <h1 class="h1 text-success"><b>Yerba Mate</b></h1>
              <p>
                Yerba Mate is a natural infusion made from the leaves of the Paraguayan holly - Ilex Paraguariensis.
                This
                drink has amazing stimulating properties and unforgettable taste. Try it yourself!
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="carousel-item">
      <div class="container">
        <div class="row p-5">
          <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
            <img class="img-fluid" src="/images/yerbaMateImage2.png" alt="">
          </div>
          <div class=" col-lg-6 mb-0 d-flex align-items-center">
            <div class="text-align-left">
              <h1 class="h1 text-success"><b>All you need to drink</b></h1>
              <h3 class="h2">Yerba, Bombilla and Gourd</h3>
              <p>
                Traditional yerba is drunk through straw with strainer at one end - Bombilla, from gourd or from wooden
                cup made with the so called Palo Santo - the Holly Trunk with metal coat.
                <br>
                You can find Gourds, Cups, bombillas and Yerba Mate in this store.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
  <a class="carousel-control-prev text-decoration-none w-auto ps-3" href="#template-mo-zay-hero-carousel" role="button"
    data-bs-slide="prev">
    <i class="fas fa-chevron-left"></i>
  </a>
  <a class="carousel-control-next text-decoration-none w-auto pe-3" href="#template-mo-zay-hero-carousel" role="button"
    data-bs-slide="next">
    <i class="fas fa-chevron-right"></i>
  </a>
</div>
<!-- End Banner Hero -->


