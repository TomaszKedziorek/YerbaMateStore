@{
  ViewData["Title"] = "Index";
}
@section HeadArea{
  <link rel="stylesheet" href="//cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
}

<div class="row mt-4 mx-md-3 p-3 ">
  <div class="row pt-4 p-0">
    <div class="col-7 text-start ps-4">
      <h2 class="text-success">Yerba Mate List</h2>
    </div>
    <div class="col-5 text-end p-0">
      <a class="btn btn-success fw-bold" asp-asp-controller="YerbaMate" asp-action="Upsert"><i
          class="bi bi-plus-circle"></i>
        &nbsp; Create New Product</a>
    </div>
  </div>
  <br>

  <table id="yerbaMateProductData" class="table table-bordered table-striped table-hover align-middle w-100">
    <thead>
      <tr class="table-secondary">
        <th>Id</th>
        <th>Name</th>
        <th>Brand</th>
        <th>Weight</th>
        <th>Price</th>
        <th></th>
      </tr>
    </thead>

  </table>
</div>
@section Scripts{
  <script src="~/js/yerbaMateProduct.js"></script>
  <script src="~/js/deleteProduct.js"></script>
  <script src="//cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
}