@page
@model PersonalDataModel
@{
  ViewData["Title"] = "Personal Data";
  ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>
<div class="mb-2 row justify-content-center">
  @* <div class="col-sm-2"></div> *@
  <div class="col-sm-10">
    <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.
    </p>
    <p>
      <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
    </p>

    <div class="row justify-content-lg-start">
      <div class="col-5 col-sm-3">
        <form method="post" id="download-data" asp-page="DownloadPersonalData">
          <button class="btn btn-success w-100" type="submit">Download</button>
        </form>
      </div>
      <div class="col-5 col-sm-3">
        <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger w-100">Delete</a>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
