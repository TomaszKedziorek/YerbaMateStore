@page
@model LoginModel

@{
  ViewData["Title"] = "Log in";
}

<section class="bg-light d-flex justify-content-center">
  <div class="container-lg pb-5 p-3">
    <h1 class="text-success">@ViewData["Title"]</h1>
    <h2>Use a local account to log in.</h2>
    <hr />

    <div class="row justify-content-center">
      <div class="col-12">
        <form id="account" method="post">

          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="mb-2 row justify-content-center">
            <label asp-for="Input.Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-8">
              <input asp-for="Input.Email" class="form-control rounded-0">
              <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
          </div>

          <div class="mb-2 row justify-content-center">
            <label asp-for="Input.Password" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-8">
              <div class="input-group mb-1">
                <input asp-for="Input.Password" class="form-control rounded-0" type="password" id="inputPassword">
                <span class="input-group-text bg-white rounded-0 p-0" id="basic-addon1"><i
                    class="bi bi-eye-slash px-3 py-1" id="eyeIconPassword"></i></span>
              </div>
              <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
          </div>

          <div class="mb-2 row justify-content-center">
            <div class="col-sm-2"></div>
            <div class="col-sm-8">
              <input class="form-check-input" asp-for="Input.RememberMe" />
              <label asp-for="Input.RememberMe">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
            </div>
          </div>

          <div class="mb-2 row justify-content-center">
            <div class="col-sm-2"></div>
            <div class="col-sm-8">
              <button id="login-submit" type="submit" class="w-50 btn btn-lg btn-success">Log in</button>
              <div class="my-2">
                <p>Don't have an account? <a asp-area="Identity" asp-page="/Account/Register">Register!</a></p>
                <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
                <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation.</a></p>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
  <script src="/js/showHidePasswordEyeIcon.js"></script>
}
