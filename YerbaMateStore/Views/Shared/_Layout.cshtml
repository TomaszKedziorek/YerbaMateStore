<!DOCTYPE html>
<html lang="en">

<head>
  <title>@ViewData["Title"] - Yerba Mate</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="apple-touch-icon" href="/img/apple-icon.png">
  <link rel="shortcut icon" type="image/x-icon" href="/img/favicon.ico">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/zayTemplateCss/templatemo.css">
  <link rel="stylesheet" href="/css/custom.css">
  @if (IsSectionDefined("HeadArea"))
  {
    RenderSection("HeadArea");
  }
  <!-- Load fonts style after rendering the layout styles -->
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;200;300;400;500;700;900&display=swap">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
  <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
  <!--

TemplateMo 559 Zay Shop

https://templatemo.com/tm-559-zay-shop

-->
</head>

<body>
  <!-- Start Top Nav -->
  <nav class="navbar navbar-expand-lg bg-dark navbar-light d-none d-lg-block" id="templatemo_nav_top">
    <div class="container text-light">
      <div class="w-100 d-flex justify-content-between">
        <div>
          <i class="bi bi-envelope-fill"></i>
          <a class="navbar-sm-brand text-light text-decoration-none"
            href="mailto:tomasz.kedziorek.programista@gmail.com">tomasz.kedziorek.programista@gmail.com</a>
          <i class="bi bi-telephone-fill"></i>
          <a class="navbar-sm-brand text-light text-decoration-none" href="tel:123-456-789">123-456-789</a>
        </div>
        <div>
          <a class="text-light text-decoration-none me-2" target="_blank"
            href="https://github.com/TomaszKedziorek/YerbaMateStore">
            <i class="bi bi-github"></i>
          </a>
          <a class="text-light text-decoration-none me-2" target="_blank"
            href="https://tomasz-kedziorek.profesjonalnyprogramista.pl/">
            <i class="bi bi-person-circle"></i>
          </a>
        </div>
      </div>
    </div>
  </nav>
  <!-- Close Top Nav -->

  <!-- Header -->
  <nav class="navbar navbar-expand-lg navbar-light shadow">
    <div class="container d-flex justify-content-between align-items-center">

      <a class="navbar-brand text-success logo h1 align-self-center" asp-area="Customer" asp-controller="Home"
        asp-action="Index">
        Yerba Mate
      </a>

      <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse"
        data-bs-target="#templatemo_main_nav" aria-controls="navbarSupportedContent" aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="align-self-center collapse navbar-collapse flex-fill  d-lg-flex justify-content-lg-between"
        id="templatemo_main_nav">
        <div class="flex-fill">
          <ul class="nav navbar-nav d-flex justify-content-between mx-lg-auto">
            <li class="nav-item">
              <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true"
                aria-expanded="false">Content Management</a>
              <div class="dropdown-menu">
                <a class="nav-link" asp-area="Admin" asp-controller="YerbaMate" asp-action="Index">Yerba Mate</a>
                <a class="nav-link" asp-area="Admin" asp-controller="Bombilla" asp-action="Index">Bombilla</a>
                <a class="nav-link" asp-area="Admin" asp-controller="Cup" asp-action="Index">Gourds - Mates</a>
              </div>
            </li>
          </ul>
        </div>
        <div class="navbar align-self-center d-flex">
          <a class="nav-icon position-relative text-decoration-none" href="#">
            <i class="bi bi-cart-check-fill text-dark mr-1"></i>
            <span
              class="position-absolute top-0 left-100 translate-middle badge rounded-pill bg-light text-dark">7</span>
          </a>
          <a class="nav-icon position-relative text-decoration-none" href="#">
            <i class="bi bi-person-fill text-dark mr-3"></i>
            <span
              class="position-absolute top-0 left-100 translate-middle badge rounded-pill bg-light text-dark">+99</span>
          </a>
        </div>
      </div>

    </div>
  </nav>
  <!-- Close Header -->

  <div>
    <main role="main">
      <partial name="_Notification" />
      @RenderBody()
    </main>
  </div>

  <!-- Start Footer -->
  <footer class="bg-dark" id="tempaltemo_footer">
    <div class="container">
      <div class="row">

        <div class="col-md-4 pt-5">
          <h2 class="h2 text-success border-bottom pb-3 border-light logo">Yerba Mate</h2>
          <ul class="list-unstyled text-light footer-link-list">
            <li>
              <i class="bi bi-geo-alt-fill"></i>
              Address of this store
            </li>
            <li>
              <i class="bi bi-telephone-fill"></i>
              <a class="text-decoration-none" href="tel:010-020-0340">123-456-789</a>
            </li>
            <li>
              <i class="bi bi-envelope-fill"></i>
              <a class="text-decoration-none" href="mailto:info@company.com">tomasz.kedziorek.programista@gmail.com</a>
            </li>
          </ul>
        </div>

        <div class="col-md-4 pt-5">
          <h2 class="h2 text-light border-bottom pb-3 border-light">Products</h2>
          <ul class="list-unstyled text-light footer-link-list">
            <li><a class="text-decoration-none" href="#">Yerba Mate</a></li>
            <li><a class="text-decoration-none" href="#">Bombilla</a></li>
            <li><a class="text-decoration-none" href="#">Gourds and Mates</a></li>
          </ul>
        </div>

        <div class="col-md-4 pt-5">
          <h2 class="h2 text-light border-bottom pb-3 border-light">Further Info</h2>
          <ul class="list-unstyled text-light footer-link-list">
            <li>
              <a class="text-decoration-none" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li>
              <a class="text-decoration-none" asp-area="Customer" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </li>
          </ul>
        </div>

      </div>

      <div class="row text-light mb-4">
        <div class="col-12 mb-3">
          <div class="w-100 my-3 border-top border-light"></div>
        </div>
        <div class="col-auto me-auto">
          <ul class="list-inline text-left footer-icons">
            <li class="list-inline-item border border-light rounded-circle text-center">
              <a class="text-light text-decoration-none" target="_blank"
                href="https://github.com/TomaszKedziorek/YerbaMateStore">
                <i class="bi bi-github"></i>
              </a>
            </li>
            <li class="list-inline-item border border-light rounded-circle text-center">
              <a class="text-light text-decoration-none" target="_blank"
                href="https://tomasz-kedziorek.profesjonalnyprogramista.pl/">
                <i class="bi bi-person-circle"></i>
              </a>
            </li>
          </ul>
        </div>

      </div>
    </div>

    <div class="w-100 bg-black py-3">
      <div class="container">
        <div class="row pt-2">
          <div class="col-12">
            <p class="text-left text-light">
              Copyright &copy; 2023 Yerba Mate Store
              | Template by <a rel="sponsored" href="https://templatemo.com" target="_blank">TemplateMo</a>
            </p>
          </div>
        </div>
      </div>
    </div>

  </footer>
  <!-- End Footer -->

  <!-- Start Script -->
  @* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

  <script src="/js/zayTemplateJs/jquery-1.11.0.min.js"></script>
  <script src="/js/zayTemplateJs/jquery-migrate-1.2.1.min.js"></script>
  <script src="/js/zayTemplateJs/templatemo.js"></script>
  <script src="/js/custom.js"></script>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  @await RenderSectionAsync("Scripts", required: false)
  <!-- End Script -->
</body>

</html>